{
  "name": "video-to-frames",
  "version": "1.0.0",
  "description": "A Node.js tool that converts videos to exactly 300 evenly spaced PNG frames in original resolution with highest quality",
  "main": "main-electron.js",
  "bin": {
    "video-to-frames": "./cli.js"
  },
  "scripts": {
    "start": "node index.js",
    "cli": "node cli.js",
    "dev": "vite",
    "build:react": "vite build",
    "electron": "cross-env NODE_ENV=development electron main-electron.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron main-electron.js\"",
    "electron:build": "npm run build:react && electron main-electron.js",
    "build": "npm run build:react",
    "build:win": "npm run build:react && electron-builder --win",
    "build:all": "npm run build:react && electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "video",
    "frames",
    "ffmpeg",
    "converter",
    "png",
    "nodejs",
    "video-to-image",
    "frame-splitter",
    "image-splitter",
    "video-converter",
    "frame-extractor",
    "video-to-frames",
    "image-extractor",
    "video-processing",
    "video-analysis",
    "machine-learning",
    "computer-vision",
    "video-editing",
    "content-creation",
    "animation",
    "thumbnails",
    "video-tools",
    "image-processing",
    "media-converter",
    "video-splitter",
    "frame-by-frame",
    "video-breakdown",
    "image-sequence",
    "video-capture",
    "video-preview",
    "video-thumbnail",
    "batch-converter",
    "cross-platform",
    "cli",
    "gui",
    "electron",
    "editor-can-use-image-splitter"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "progress": "^2.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "vite": "^5.4.21",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "build": {
    "appId": "com.kaifali.framesplitter",
    "productName": "Frame Splitter",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*",
      "node_modules/@ffmpeg-installer/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-react/**/*",
      "main-electron.js",
      "preload.js",
      "VideoToFramesConverter.js",
      "icon.ico",
      "Image spltter.png",
      "package.json",
      "node_modules/fluent-ffmpeg/**/*",
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*",
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/async/**/*",
      "node_modules/which/**/*",
      "node_modules/isexe/**/*"
    ]
  }
}
